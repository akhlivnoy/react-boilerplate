{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES6"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "#assets": ["app/assets/"],
      "#assets/*": ["app/assets/*"],
      "#components": ["app/components"],
      "#components/*": ["app/components/*"],
      "#constants": ["app/constants"],
      "#constants/*": ["app/constants/*"],
      "#hooks": ["app/hooks"],
      "#hooks/*": ["app/hooks/*"],
      "#models": ["app/models"],
      "#models/*": ["app/models/*"],
      "#navigation": ["app/navigation"],
      "#navigation/*": ["app/navigation/*"],
      "#pages": ["app/pages"],
      "#pages/*": ["app/pages/*"],
      "#redux": ["app/redux"],
      "#redux/*": ["app/redux/*"],
      "#services": ["app/services"],
      "#services/*": ["app/services/*"],
      "#themes": ["app/themes"],
      "#themes/*": ["app/themes/*"],
      "#types": ["app/types"],
      "#types/*": ["app/types/*"],
      "#utils": ["app/utils"],
      "#utils/*": ["app/utils/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCaseOnly"
        }
      }
    ]
  },
  "include": ["src"]
}
